
<div class="row">
    <div class="col-sm-12">
        <div class="alert alert-success" role="alert">填写注册信息</div>
    </div>
    <div class="col-sm-10">

        @using (Html.BeginForm("Register", "Sms", FormMethod.Post, new { @class = "form-horizontal", role = "form", @id = "info-form" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label for="userName" class="col-xs-2 control-label">用户名<span class="text-danger">*</span></label>
                <div class="col-xs-10">
                    @Html.TextBox("userName", null, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label for="mobile" class="col-xs-2 control-label">手机<span class="text-danger">*</span></label>
                <div class="col-xs-10">
                    @Html.TextBox("mobile", null, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label for="phone" class="col-xs-2 control-label">办公室电话<span class="text-danger">*</span></label>
                <div class="col-xs-10">
                    @Html.TextBox("phone", null, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label for="fax" class="col-xs-2 control-label">传真<span class="text-danger">*</span></label>
                <div class="col-xs-10">
                    @Html.TextBox("fax", null, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label for="email" class="col-xs-2 control-label">电子邮箱<span class="text-danger">*</span></label>
                <div class="col-xs-10">
                    @Html.TextBox("email", null, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label for="postcode" class="col-xs-2 control-label">邮编<span class="text-danger">*</span></label>
                <div class="col-xs-10">
                    @Html.TextBox("postcode", null, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label for="company" class="col-xs-2 control-label">公司名<span class="text-danger">*</span></label>
                <div class="col-xs-10">
                    @Html.TextBox("company", null, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label for="address" class="col-xs-2 control-label">公司地址<span class="text-danger">*</span></label>
                <div class="col-xs-10">
                    @Html.TextBox("address", null, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-xs-2"></div>
                <div class="col-xs-10">
                    <a id="sms-register-btn" href="#" class="btn btn-primary btn-block">注 册</a>
                </div>
            </div>
        }
    </div>
</div>
