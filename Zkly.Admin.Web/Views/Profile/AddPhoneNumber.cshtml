@model Zkly.BLL.ViewModels.AddPhoneNumberViewModel
@{
    ViewBag.Title = "添加手机号码";
}
@section styles {
    @Scripts.Render("~/js/jqueryval")
    @Styles.Render("~/css/bootstrapValidatorCss")
    @Scripts.Render("~/js/bootstrapValidator")
}

<br />
<div class="panel panel-default">
    <div class="panel-heading">@ViewBag.Title</div>
    <div class="panel-body">

        @using (Html.BeginForm("SaveAddPhoneNumber", "Profile", FormMethod.Post, new { @class = "form-horizontal", role = "form", @id = "info-form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Number, new { @class = "col-xs-2 control-label" })
                <div class="col-xs-6">
                    @Html.TextBoxFor(m => m.Number, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-2"></div>
                <div class="col-xs-6">
                    <input type="submit" class="btn btn-primary btn-block" value="提 交" />
                </div>
            </div>
        }
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/js/AddPhoneNumber")
}
