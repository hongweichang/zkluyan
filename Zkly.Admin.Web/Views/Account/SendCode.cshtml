@model Zkly.BLL.ViewModels.SendCodeViewModel
@{
    ViewBag.Title = "发送";
}

@section styles {
    @Scripts.Render("~/js/jqueryval")
}

<br />
<div class="panel panel-default">
    <div class="panel-heading">@ViewBag.Title</div>
    <div class="panel-body">

        @using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
        @Html.AntiForgeryToken()
        @Html.Hidden("rememberMe", @Model.RememberMe)
        <h4>发送验证代码</h4>
        <hr />
        <div class="row">
            <div class="col-xs-8">
                选择双重身份验证提供程序:
                @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
                <input type="submit" value="提 交" class="btn btn-primary btn-block" />
            </div>
        </div>
        }
    </div>
</div>


