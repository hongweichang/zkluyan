@model Zkly.DAL.Models.CapitalRoadshow
@{
    ViewBag.Title = "资本路演";
}
@using (Html.BeginForm("Save", "CapitalRoadshow", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    <div class="panel panel-default">
        <div class="panel-heading">
            @(Model.Id == 0 ? "创建" : "修改")资本路演
        </div>
        @Html.Partial("_ErrorMessage")
        @Html.Partial("CapitalRoadshow/_Edit")

        <div class="panel-footer">
            <div class="col-xs-offset-2">
                <input type="submit" class="btn btn-primary" value="保存" />
                <a href="@Url.Action("Index")" class="btn btn-default">返回列表</a>
            </div>
        </div>
    </div>
}

@section scripts
{
    @Scripts.Render("~/js/capital-roadshow")
}

