@model Zkly.DAL.Models.CapitalRoadshow

@{
    ViewBag.Title = "查看路演信息";
}

<div id="user-details-panel" class="panel panel-default">
    <div class="panel-heading">
        @ViewBag.Title
    </div>
    @*@Html.Partial("_SuccessMessage")
        @Html.Partial("_ErrorMessage")*@
    <div class="panel-body">

        @Html.Partial("CapitalRoadshow/_Details", Model)

    </div>
    <div id="recordpanel" class="record-line hidden" data-url="@Url.Action("RecordParts", "CapitalRoadshow", new { id = Model.Id })"></div>
    <div class="panel-footer dl-footer">
        @RenderSection("buttons", true)
    </div>
</div>


<!-- 弹窗 -->
<div class="modal fade" id="delete-account" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    @using (Html.BeginForm("Delete", "CapitalRoadshow"))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">删除路演</h4>
                </div>
                <div class="modal-body">
                    <p>即将删除路演相关数据。</p>
                    <p>警告：删除后数据将不可恢复！</p>
                    <p>&nbsp;</p>
                    <p>你确定要删除吗？</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <button type="submit" class="btn btn-danger">删除</button>
                </div>
            </div>
        </div>
    }
</div>

