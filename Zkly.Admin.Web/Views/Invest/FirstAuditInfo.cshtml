@model Zkly.DAL.Models.InvestFirstAuditInfo

<div class="panel panel-default first-audit-form">
    <div class="panel-body">
        <div class="form-group">
            <div class="form-label">公司名称</div>
            <div class="form-input underline">
                <span>@Model.CompanyName</span>
            </div>
        </div>

        <div class="form-group">
            <div class="form-label">成立时间</div>
            <div id="foundingDateWrap" class="form-input underline">
                <span>@(Model.FoundingDate.HasValue ? Model.FoundingDate.Value.ToString("yyyy-MM-dd") : "")</span>
            </div>
        </div>

        <div class="form-group">
            <div class="form-label">所属行业</div>
            <div class="form-input underline">
                <span>@Model.Industry</span>
            </div>
        </div>

        <div class="form-group">
            <div class="form-label">所在地区</div>
            <div class="form-input underline">
                <span>@Model.Area</span>
            </div>
        </div>

        <div class="form-group">
            <div class="form-label">行业地位</div>
            <div class="form-input underline">
                <span>@Model.IndustryPosition</span>
            </div>
        </div>

        <div class="form-group">
            <div class="form-label">行业竞争情况</div>
            <div class="form-input underline">
                <span>@Model.IndustryCompetition</span>
            </div>
        </div>

        <div class="form-group">
            <div class="form-label">项目名称</div>
            <div class="form-input underline">
                <span>@Model.ProjectName</span>
            </div>
        </div>

        <div class="form-group">
            <div class="form-label">项目所获奖项</div>
            <div class="form-input underline">
                <span>@Model.ProjectAwards</span>
            </div>
        </div>

        <div class="form-group">
            <div class="form-label">申请投资</div>
            <div class="form-input underline">
                <span>@Model.InvestmentInstitutions</span>
            </div>
        </div>

        <div class="form-group">
            <div class="form-label">申请金额</div>
            <div class="form-input underline">
                <span>@(Model.ApplyQuota > 0 ? Model.ApplyQuota + "万元" : "")</span>
            </div>
        </div>

        <div class="form-group">
            <div class="form-label">法定代表人</div>
            <div class="form-input">
                <span class="underline input-1">@Html.Raw(string.IsNullOrEmpty(@Model.LegalPerson) ? "&nbsp" : @Model.LegalPerson)</span>
                <span class="underline input-1">@Html.Raw(string.IsNullOrEmpty(@Model.LegalPhone) ? "&nbsp" : @Model.LegalPhone)</span>
                <span class="underline input-1">@Html.Raw(string.IsNullOrEmpty(@Model.LegalCellPhone) ? "&nbsp" : @Model.LegalCellPhone)</span>
            </div>
        </div>

        <div class="form-group">
            <div class="form-label">联系人</div>
            <div class="form-input">
                <span class="underline input-1">@Html.Raw(string.IsNullOrEmpty(@Model.Contact) ? "&nbsp" : @Model.Contact)</span>
                <span class="underline input-1">@Html.Raw(string.IsNullOrEmpty(@Model.ContactPhone) ? "&nbsp" : @Model.ContactPhone)</span>
                <span class="underline input-1">@Html.Raw(string.IsNullOrEmpty(@Model.ContactCellPhone) ? "&nbsp" : @Model.ContactCellPhone)</span>
            </div>
        </div>

        <div class="form-group">
            <div class="form-label">公司邮箱</div>
            <div class="form-input underline">
                <span>@Model.Email</span>
            </div>
        </div>

        <div class="form-group">
            <div class="form-label">公司简介</div>
            <div class="form-input underline">
                <span>@Model.CompanyDescription</span>
            </div>
        </div>

        <div class="form-group group-list">
            <div class="form-label">公司核心优势</div>
            <div class="form-input">
                <div class="">
                    @Html.CheckBoxFor(m => m.IsTeamAdv) 团队优势
                    @{ var clsTeam = Model.IsTeamAdv ? "" : "hidden";
                    <div class="@clsTeam underline">@Model.TeamAdv</div>
                    }
                </div>
                <div class="">
                    @Html.CheckBoxFor(m => m.IsProdAdv) 产品优势
                    @{ var clsProd = Model.IsProdAdv ? "" : "hidden";
                    <div class="@clsProd underline">@Model.ProdAdv</div>
                    }
                </div>
                <div class="">
                    @Html.CheckBoxFor(m => m.IsTechAdv) 技术优势
                    @{ var clsTech = Model.IsTechAdv ? "" : "hidden";
                    <div class="@clsTech underline">@Model.TechAdv</div>
                    }
                </div>
                <div class="">
                    @Html.CheckBoxFor(m => m.IsScaleAdv) 规模优势
                    @{ var clsScale = Model.IsScaleAdv ? "" : "hidden";
                    <div class="@clsScale underline">@Model.ScaleAdv</div>
                    }
                </div>
                <div class="">
                    @Html.CheckBoxFor(m => m.IsSaleAdv) 销售优势
                    @{ var clsSale = Model.IsSaleAdv ? "" : "hidden";
                    <div class="@clsSale underline">@Model.SaleAdv</div>
                    }
                </div>
                <div class="">
                    @Html.CheckBoxFor(m => m.IsIndustryAdv) 行业优势
                    @{ var clsIndustry = Model.IsIndustryAdv ? "" : "hidden";
                    <div class="@clsIndustry underline">@Model.IndustryAdv</div>
                    }
                </div>
                <div class="">
                    @Html.CheckBoxFor(m => m.IsResourceAdv) 客户资源优势
                    @{
                        var clsResource = Model.IsResourceAdv ? "" : "hidden";
                        <div class="@clsResource underline">@Model.ResourceAdv</div>
                    }
                </div>
                <div class="">
                    @Html.CheckBoxFor(m => m.IsOtherAdv) 其他优势
                    @{
                        var clsIsOtherAdv = Model.IsOtherAdv ? "" : "hidden";
                        <div class="@clsIsOtherAdv underline">@Model.OtherAdv</div>
                    }
                </div>


            </div>
        </div>

        <div class="form-group">
            <div class="form-label">市场及营销</div>
            <div class="form-input underline">
                @if (string.IsNullOrEmpty(Model.MarketAndSales))
                {
                    <span>&nbsp;</span>
                }
                else
                {
                    <span>@Model.MarketAndSales</span>
                }
            </div>
        </div>

        <div class="form-group">
            <div class="form-label">5年财务数据 <br />(单位：万元)</div>
            <div class="form-input">
                <div class="financial-data">
                    <ul>
                        <li class="underline"><span>@Model.Data1</span><span>(@DateTime.Now.Year)</span></li>
                        <li class="underline"><span>@Model.Data2</span><span>(@DateTime.Now.AddYears(-1).Year)</span></li>
                        <li class="underline"><span>@Model.Data3</span><span>(@DateTime.Now.AddYears(-2).Year)</span></li>
                        <li class="underline"><span>@Model.Data4</span><span>(@DateTime.Now.AddYears(-3).Year)</span></li>
                        <li class="underline"><span>@Model.Data5</span><span>(@DateTime.Now.AddYears(-4).Year)</span></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>