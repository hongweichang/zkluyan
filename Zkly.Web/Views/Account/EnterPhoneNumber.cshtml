@model Zkly.BLL.ViewModels.ForgotPasswordViewModel
@{
    ViewBag.Title = "输入手机号码";
}

@section heads {
    @Scripts.Render("~/js/jqueryval")
}


<br />
<div class="panelpanel-default">
    <div class="panel-heading">@ViewBag.Title</div>
    <div class="panel-body">

        @using (Html.BeginForm("EnterPhoneNumber", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
           
            @Html.ValidationSummary("", new { @class = "text-danger" })
        
            <div class="form-group">
                @Html.LabelFor(m => m.Number, new { @class = "col-xs-2 control-label" })
                <div class="col-xs-10">
                    @Html.TextBoxFor(m => m.Number, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-2"></div>
                <div class="col-xs-10">
                    <input type="submit" class="btn btn-primary btn-block" value="提 交" />
                </div>
            </div>
        }
    </div>
</div>





